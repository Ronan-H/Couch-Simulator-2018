package ronan_hanley.galway_game_jam.nine.level;

import java.awt.image.BufferedImage;
import java.awt.image.DataBufferByte;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

import ronan_hanley.galway_game_jam.nine.entity.MovingEntity;

public class Level {
	private BufferedImage image;
	private int[] pixelData;
	
	public Level(int levelNum) {
		try {
			image = ImageIO.read(new File(String.format("res/level%d.png", levelNum)));
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		pixelData = ((DataBufferByte) image.getRaster().getDataBuffer()).getData();
	}
	
	public boolean collides(MovingEntity e) {
		
	}
	
}
