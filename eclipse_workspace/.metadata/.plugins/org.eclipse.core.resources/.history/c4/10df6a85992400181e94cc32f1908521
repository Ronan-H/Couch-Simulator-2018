package ronan_hanley.galway_game_jam.nine.entity;

public class BackAndForthMovementPattern extends MovementPattern {
	protected int srcX, srcY;
	protected int destX, destY;
	private boolean upPhase;
	
	public BackAndForthMovementPattern(Human human, int destX, int destY) {
		super(human);
		srcX = human.getX();
		srcY = human.getY();
		
		this.destX = destX;
		this.destY = destY;
		
		upPhase = true;
	}

	@Override
	public void tick() {
		Human h = getHuman();
		
		h.goMaxSpeed();
		
		if (upPhase) {
			h.goUp();
			
			if (h.getY() < destY) {
				upPhase = false;
			}
		}
		else {
			h.goDown();
			
			if (h.getY() > srcY) {
				upPhase = true;
			}
		}
	}
	
}
